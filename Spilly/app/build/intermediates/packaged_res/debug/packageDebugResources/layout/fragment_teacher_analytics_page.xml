<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_reporting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#FFFFFF">

    <!-- Page heading -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reporting and Analytics"
        android:textSize="20sp"
        android:textColor="#111827"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="6dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard Overview"
        android:textSize="18sp"
        android:textColor="#111827"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="10dp" />

    <!-- Top stats (3 cards) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="12dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="84dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#62EFEFEF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E6E9EE"
            android:layout_marginEnd="10dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/total_reports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="42"
                    android:textSize="26sp"
                    android:textColor="#111827"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Reports"
                    android:textSize="12sp"
                    android:textColor="#4B5563"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="84dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#62EFEFEF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E6E9EE"
            android:layout_marginEnd="10dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/active_cases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:textSize="26sp"
                    android:textColor="#2563EB"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Cases"
                    android:textSize="12sp"
                    android:textColor="#4B5563"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="84dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#62EFEFEF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E6E9EE"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/resolved_cases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19"
                    android:textSize="26sp"
                    android:textColor="#059669"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resolved Cases"
                    android:textSize="12sp"
                    android:textColor="#4B5563"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Reports by Bullying Type card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#62EFEFEF"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeWidth="2dp"
        app:strokeColor="#E6E9EE"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/section_title_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports by Bullying Type"
                android:textSize="17sp"
                android:textColor="#111827"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="10dp" />

            <!-- Each bar is now thinner (28dp) to fit better without scrolling -->

            <!-- Cyberbullying -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cyberbullying"
                    android:textColor="#111827"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cyber_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19 (45%)"
                    android:textColor="#111827"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="45"
                    android:background="@drawable/rounded_left_blue"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="55"
                    android:background="#62EFEFEF" />
            </LinearLayout>

            <!-- Verbal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Verbal"
                    android:textColor="#111827"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/verbal_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13 (31%)"
                    android:textColor="#111827"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="31"
                    android:background="@drawable/rounded_left_purple"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="69"
                    android:background="#62EFEFEF" />
            </LinearLayout>

            <!-- Physical -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Physical"
                    android:textColor="#111827"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/physical_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 (14%)"
                    android:textColor="#111827"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    android:background="@drawable/rounded_left_pink"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="86"
                    android:background="#62EFEFEF" />
            </LinearLayout>

            <!-- Social -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Social"
                    android:textColor="#111827"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/social_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 (10%)"
                    android:textColor="#111827"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@drawable/rounded_left_orange"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="90"
                    android:background="#62EFEFEF" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Case Status Distribution card (also uses thinner bars) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#62EFEFEF"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeWidth="2dp"
        app:strokeColor="#E6E9EE"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/section_title_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case Status Distribution"
                android:textSize="17sp"
                android:textColor="#111827"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="10dp" />

            <!-- Pending -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pending"
                    android:textColor="#111827"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pending_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 (19%)"
                    android:textColor="#111827"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="19"
                    android:background="@drawable/rounded_left_yellow"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="81"
                    android:background="#62EFEFEF" />
            </LinearLayout>

            <!-- Investigating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Investigating"
                    android:textColor="#111827"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/investigating_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 (36%)"
                    android:textColor="#111827"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="36"
                    android:background="@drawable/rounded_left_blue"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="64"
                    android:background="#62EFEFEF" />
            </LinearLayout>

            <!-- Resolved -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Resolved"
                    android:textColor="#111827"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/resolved_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19 (45%)"
                    android:textColor="#111827"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="45"
                    android:background="@drawable/rounded_left_green"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="55"
                    android:background="#62EFEFEF" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>