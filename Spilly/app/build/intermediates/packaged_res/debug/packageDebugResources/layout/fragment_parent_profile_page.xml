<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/parent_bottom_navigation"
        android:background="#FFFFFF"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/TVAccParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Account and Preferences"
                android:textColor="#111827"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVUserInfoParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="User Information"
                android:textColor="#374151"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVUsernameParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Username"
                android:textColor="#3F51B5"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/SWEmailNotiParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="user.email@school.edu"
                android:textColor="#3F51B5"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TVRoleParent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Role"
                    android:textColor="#374151"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVShowRoleParent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent"
                    android:textColor="#6B7280" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="#E5E7EB" />

            <TextView
                android:id="@+id/TVSchoolInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="School Information"
                android:textColor="#374151"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVCurrentSchoolLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current School"
                android:textColor="#009688"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/TVCurrentSchoolParentProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="SK Bandar Utama"
                android:textColor="#009688"
                android:textSize="14sp" />

            <Button
                android:id="@+id/ButtonRequestSchoolChangeParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#6D5BA6"
                android:text="Request School Change"
                android:textAllCaps="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="#E5E7EB" />

            <TextView
                android:id="@+id/TVNotiPreferencesParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Notifications Preferences"
                android:textColor="#374151"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/SWEmailNotiParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Email Notifications" />

            <Switch
                android:id="@+id/SWStatusUpdateParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Status Updates" />

            <Switch
                android:id="@+id/SWWeeklyDigestParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Weekly Digest" />

            <Switch
                android:id="@+id/SWEmergencyAlertsParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Emergency Alerts" />

            <TextView
                android:id="@+id/TVPrivacyParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Privacy and Confidentiality
All personal information is protected. Student identities are kept confidential and only revealed when absolutely necessary for their safety and wellbeing."
                android:textColor="#E91E63"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/TVAccountActionsParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Account Actions"
                android:textColor="#374151"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ButtonChangePassParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android.backgroundTint="#6D5BA6"
                android:text="Change Password"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/ButtonLogOutParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android.backgroundTint="#6D5BA6"
                android:text="Log Out"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/parent_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/parent_bottom_nav_menu" />

</RelativeLayout>