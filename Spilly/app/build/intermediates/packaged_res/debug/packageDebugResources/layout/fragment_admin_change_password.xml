<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".AdminChangePasswordFragment">

    <TextView
        android:id="@+id/btn_back_admin_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:drawablePadding="8dp"
        app:drawableStartCompat="@android:drawable/ic_menu_revert"
        app:drawableTint="#3F51B5"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:id="@+id/tv_title_admin_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_new_pass_admin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="Enter new password"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_confirm_pass_admin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="Confirm new password"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/btn_update_pass_admin"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Update Password"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#673AB7"
        app:cornerRadius="25dp"/>

</LinearLayout>