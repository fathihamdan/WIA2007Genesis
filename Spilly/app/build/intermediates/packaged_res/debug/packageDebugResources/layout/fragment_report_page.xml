<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/backbutton"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FCF5FD"
            android:text="Back to Home"
            android:textColor="#666363"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ReportFormTitle"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="40dp"
            android:gravity="center_vertical"
            android:text="Report Form"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ReportInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:gravity="center_vertical"
            android:text="Fill in the details below" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/DateBox"
            android:layout_width="334dp"
            android:layout_height="104dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="#C1BABA"
            app:strokeWidth="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/DateQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:text="When did this happen?"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:layout_width="285dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_border"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="8dp"
                    android:hint="dd/mm/yyyy"
                    android:textColor="#000000"
                    android:textColorHint="#313131"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/DateQuestion" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/BullyTypebox"
            android:layout_width="334dp"
            android:layout_height="104dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="#C1BABA"
            app:strokeWidth="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/BullyTypeQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:text="Type of Bullying"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinner_bullying_type"
                    android:layout_width="285dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edittext_border"
                    android:paddingStart="8dp"
                    android:spinnerMode="dropdown"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/BullyTypeQuestion" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/SeverityLevelBox"
            android:layout_width="334dp"
            android:layout_height="318dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="#C1BABA"
            app:strokeWidth="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/btn_low_severity"
                    android:layout_width="285dp"
                    android:layout_height="76dp"
                    android:layout_margin="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="37dp"
                    android:background="@drawable/edittext_border"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/SeverityLevelTitle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Minor incident, one-time occurrence"
                        android:textColor="#6B7280"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_medium_severity"
                    android:layout_width="285dp"
                    android:layout_height="76dp"
                    android:layout_margin="12dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="37dp"
                    android:background="@drawable/edittext_border"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_low_severity">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Repeated incidents, concerning behaviour"
                        android:textColor="#6B7280"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_high_severity"
                    android:layout_width="285dp"
                    android:layout_height="76dp"
                    android:layout_margin="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="37dp"
                    android:background="@drawable/edittext_border"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_medium_severity">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Severe, threatening, or dangerous"
                        android:textColor="#6B7280"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/SeverityLevelTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="13dp"
                    android:text="Severity Level"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/IncidentDescBox"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Incident Description"
                    android:textColor="#374151"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_description"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_border"
                    android:gravity="top"
                    android:hint="Describe what happened..."
                    android:inputType="textMultiLine"
                    android:padding="12dp"
                    android:textSize="14sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/ContinueButton"
            android:layout_width="332dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#155CFA"
            android:text="Continue"
            app:cornerRadius="10dp" />

    </LinearLayout>
</ScrollView>