<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_admin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_admin_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Control Panel"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_admin_title"
        app:layout_constraintStart_toStartOf="@id/tv_admin_title"/>

    <ImageView
        android:id="@+id/btn_go_to_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/sym_def_app_icon"
        app:tint="#5F4B8B"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Profile"
        android:clickable="true"
        android:focusable="true"/>

    <LinearLayout
        android:id="@+id/row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_admin_subtitle">

        <Button
            android:id="@+id/btn_manage_users"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="Manage\nUsers"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#5F4B8B"
            android:backgroundTint="#F8F9FA"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            android:drawableTop="@android:drawable/ic_menu_myplaces"
            android:drawableTint="#5F4B8B"
            android:paddingTop="30dp"
            android:textAllCaps="false"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/btn_manage_schools"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Manage\nSchools"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#5F4B8B"
            android:backgroundTint="#F8F9FA"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            android:drawableTop="@android:drawable/ic_menu_mylocation"
            android:drawableTint="#5F4B8B"
            android:paddingTop="30dp"
            android:textAllCaps="false"
            android:stateListAnimator="@null"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/row_1">

        <Button
            android:id="@+id/btn_all_cases"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="All Cases\nOverview"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#5F4B8B"
            android:backgroundTint="#F8F9FA"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            android:drawableTop="@android:drawable/ic_menu_agenda"
            android:drawableTint="#5F4B8B"
            android:paddingTop="30dp"
            android:textAllCaps="false"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/btn_analytics"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="System\nAnalytics"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#5F4B8B"
            android:backgroundTint="#F8F9FA"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            android:drawableTop="@android:drawable/ic_menu_sort_by_size"
            android:drawableTint="#5F4B8B"
            android:paddingTop="30dp"
            android:textAllCaps="false"
            android:stateListAnimator="@null"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Log Out"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#5F4B8B"
        app:cornerRadius="28dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:stateListAnimator="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>