<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_admin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_admin_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back, Administrator"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_admin_title"
        app:layout_constraintStart_toStartOf="@id/tv_admin_title"/>

    <LinearLayout
        android:id="@+id/row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_admin_subtitle">

        <Button
            android:id="@+id/btn_manage_users"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Manage Users"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:backgroundTint="#FFFFFF"
            app:cornerRadius="12dp"
            android:elevation="4dp"
            android:drawableTop="@android:drawable/ic_menu_myplaces"
            android:paddingTop="25dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_manage_schools"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Manage Schools"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:backgroundTint="#FFFFFF"
            app:cornerRadius="12dp"
            android:elevation="4dp"
            android:drawableTop="@android:drawable/ic_menu_mylocation"
            android:paddingTop="25dp"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/row_1">

        <Button
            android:id="@+id/btn_all_cases"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="All Cases"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:backgroundTint="#FFFFFF"
            app:cornerRadius="12dp"
            android:elevation="4dp"
            android:drawableTop="@android:drawable/ic_menu_agenda"
            android:paddingTop="25dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_analytics"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Analytics"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:backgroundTint="#FFFFFF"
            app:cornerRadius="12dp"
            android:elevation="4dp"
            android:drawableTop="@android:drawable/ic_menu_sort_by_size"
            android:paddingTop="25dp"
            android:textAllCaps="false"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Logout"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D32F2F"
        app:cornerRadius="25dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>