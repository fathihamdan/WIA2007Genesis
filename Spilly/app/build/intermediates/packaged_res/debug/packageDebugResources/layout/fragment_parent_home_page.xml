<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Page title -->
    <TextView
        android:id="@+id/dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textSize="20sp"
        android:textColor="#111827"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="12dp" />

    <!-- Privacy Protection info box -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeWidth="2dp"
        app:strokeColor="#BBDBFF"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        app:cardBackgroundColor="#F3F9FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:padding="5dp">>

            <!-- small icon placeholder -->
            <ImageView
                android:id="@+id/Shield"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/shield"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Protection"
                    android:textSize="16sp"
                    android:textColor="#0F172A"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Case information is sanitized to protect all students involved. Contact the school for specific details."
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Stats row -->
    <LinearLayout
        android:id="@+id/stats_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#62EFEFEF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E6E9EE"
            android:layout_marginEnd="12dp"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/total_cases_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="24sp"
                    android:textColor="#111827"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Cases"
                    android:textSize="13sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#62EFEFEF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E6E9EE"
            android:layout_marginEnd="12dp"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/active_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="24sp"
                    android:textColor="#2563EB"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="13sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#62EFEFEF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E6E9EE"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/resolved_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="24sp"
                    android:textColor="#059669"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resolved"
                    android:textSize="13sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Section title -->
    <TextView
        android:id="@+id/outcomes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Case Outcomes"
        android:textSize="18sp"
        android:textColor="#111827"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="12dp" />

    <!-- Case outcome card: #12456 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#62EFEFEF"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:strokeWidth="2dp"
        app:strokeColor="#E6E9EE"
        android:layout_marginBottom="12dp"
        android:padding="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="12dp">>

            <!-- Case ID -->
            <TextView
                android:id="@+id/case_id_12456"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Case ID: #12456"
                android:textColor="#0F172A"
                android:textSize="16sp" />

            <!-- status pill (top-right) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/status_pill_12456"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:paddingEnd="10dp"
                android:paddingBottom="6dp"
                app:cardBackgroundColor="#FFF7E0"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/CasePendingIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/pending_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:textColor="#7A4C00"
                        android:textSize="13sp"
                        android:layout_centerInParent="true"
                        android:padding="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Submitted label -->
            <TextView
                android:id="@+id/submitted_12456"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/case_id_12456"
                android:layout_marginTop="8dp"
                android:text="Submitted: Dec 15,\n2025"
                android:textColor="#4B5563"
                android:textSize="13sp" />

            <!-- Outcome label -->
            <TextView
                android:id="@+id/outcome_label_12456"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/submitted_12456"
                android:layout_marginTop="8dp"
                android:text="Outcome"
                android:textColor="#4B5563"
                android:textSize="13sp" />

            <!-- Outcome pill -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/outcome_pill_12456"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/outcome_label_12456"
                android:layout_marginTop="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:cardBackgroundColor="#FFF7E0"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Under Review"
                    android:textColor="#B06A00"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"
                    android:padding="5dp"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Description -->
            <TextView
                android:id="@+id/desc_12456"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/outcome_pill_12456"
                android:layout_marginTop="10dp"
                android:text="Case is being reviewed by school administration."
                android:textColor="#4B5563"
                android:textSize="13sp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Case outcome card: #12453 (LAST VISIBLE ROW as requested) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#62EFEFEF"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:strokeWidth="2dp"
        app:strokeColor="#E6E9EE"
        android:layout_marginBottom="12dp"
        android:padding="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="12dp">>

            <TextView
                android:id="@+id/case_id_12453"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case ID: #12453"
                android:textSize="16sp"
                android:textColor="#0F172A"
                android:fontFamily="sans-serif-medium" />

            <!-- status pill (top-right) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/status_pill_12453"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#EAF2FF"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/CaseUpdateIcon2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/updatenoti"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Investigating"
                        android:textColor="#1746C8"
                        android:textSize="13sp"
                        android:layout_centerInParent="true"
                        android:padding="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Submitted label -->
            <TextView
                android:id="@+id/submitted_12453"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submitted: Dec 13,\n2025"
                android:textSize="13sp"
                android:textColor="#4B5563"
                android:layout_below="@id/case_id_12453"
                android:layout_marginTop="8dp" />

            <!-- Outcome label -->
            <TextView
                android:id="@+id/outcome_label_12453"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outcome"
                android:textSize="13sp"
                android:textColor="#4B5563"
                android:layout_below="@id/submitted_12453"
                android:layout_marginTop="8dp" />

            <!-- Outcome pill -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/outcome_pill_12453"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#EAF2FF"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_below="@id/outcome_label_12453"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Being Investigated"
                    android:textColor="#1746C8"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"
                    android:padding="5dp"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Description -->
            <TextView
                android:id="@+id/desc_12453"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="School staff are actively investigating this matter."
                android:textSize="13sp"
                android:textColor="#4B5563"
                android:layout_below="@id/outcome_pill_12453"
                android:layout_marginTop="10dp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- NOTE: layout stops at case id #12453 as requested (no further cards included) -->

</LinearLayout>