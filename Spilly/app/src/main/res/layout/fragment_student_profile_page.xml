<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentProfilePage" >

    <Button
        android:id="@+id/ButtonRequestSchoolChangeStudent"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="4dp"
        android:text="Request School Change"
        app:layout_constraintBottom_toTopOf="@+id/TVNotiPreferencesStudent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TVNotiPreferencesStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="4dp"
        android:text="Notifications Preferences"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/SWEmailNotiStudent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TVRoleStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="4dp"
        android:text="Role"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/TVSchoolInformation"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TVUserInfoStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="4dp"
        android:text="User Information"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/TVUsernameStudent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ButtonChangePassStudent"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="4dp"
        android:text="Change Password"
        app:layout_constraintBottom_toTopOf="@+id/ButtonLogOutStudent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TVCurrentSchoolStudentProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="2dp"
        android:text="Current School \nSK Bandar Utama"
        android:textColor="#009688"
        app:layout_constraintBottom_toTopOf="@+id/ButtonRequestSchoolChangeStudent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/SWEmergencyAlertsStudent"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="4dp"
        android:text="Emergency Alerts"
        app:layout_constraintBottom_toTopOf="@+id/TVPrivacyStudent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/SWEmailNotiStudent"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="2dp"
        android:text="Email Notifications"
        app:layout_constraintBottom_toTopOf="@+id/SWStatusUpdateStudent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TVUsernameStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="4dp"
        android:text="Username \nuser.email@school.edu"
        android:textColor="#3F51B5"
        app:layout_constraintBottom_toTopOf="@+id/TVRoleStudent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ButtonLogOutStudent"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="28dp"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/SWStatusUpdateStudent"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="4dp"
        android:text="Status Updates"
        app:layout_constraintBottom_toTopOf="@+id/SWWeeklyDigestStudent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TVShowRoleStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="60dp"
        android:text="Student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVAccountActionsStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="4dp"
        android:text="Account Actions"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ButtonChangePassStudent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/SWWeeklyDigestStudent"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="4dp"
        android:text="Weekly Digest"
        app:layout_constraintBottom_toTopOf="@+id/SWEmergencyAlertsStudent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TVPrivacyStudent"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="4dp"
        android:text="Privacy and Confidentiality \nAll personal information is protected. Student identities are kept confidential and only revealed when absolutely necessary for their safety and wellbeing."
        android:textColor="#E91E63"
        app:layout_constraintBottom_toTopOf="@+id/TVAccountActionsStudent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TVSchoolInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="4dp"
        android:text="School Information"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/TVCurrentSchoolStudentProfile"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TVAccStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="26dp"
        android:text="Account and Preferences"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>