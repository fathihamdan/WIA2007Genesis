<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".AdminProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_back_admin_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#3F51B5"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/TVAccAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account and Preferences"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/TVUserInfoAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/TVUsernameAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="admin.zhang@spilly.edu"
            android:textSize="16sp"
            android:textColor="#3F51B5"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">
            <TextView
                android:id="@+id/TVRoleAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Role"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
            <TextView
                android:id="@+id/TVShowRoleAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Admin"
                android:textColor="#757575"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/TVNotiPreferencesAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications Preferences"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"/>

        <Switch
            android:id="@+id/SWEmailNotiAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Notifications"
            android:layout_marginBottom="12dp"/>

        <Switch
            android:id="@+id/SWSystemAlertsAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System Alerts"
            android:checked="true"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:id="@+id/TVAccountActionsAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Actions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/ButtonChangePassAdmin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Change Password"
            android:textAllCaps="false"
            android:backgroundTint="#673AB7"
            app:cornerRadius="25dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/ButtonLogOutAdmin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Log Out"
            android:textAllCaps="false"
            android:backgroundTint="#673AB7"
            app:cornerRadius="25dp"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>
</ScrollView>