<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <TextView
        android:id="@+id/btn_back_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#5F4B8B"
        android:drawablePadding="6dp"
        app:drawableStartCompat="@android:drawable/ic_menu_revert"
        app:drawableTint="#5F4B8B"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Management"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back_users"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etSearchUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="#FFFFFF"
        android:elevation="2dp"
        android:hint="Search user by name..."
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        android:drawableEnd="@android:drawable/ic_menu_search"
        android:drawableTint="#757575"
        app:layout_constraintTop_toBottomOf="@id/tv_page_title"/>

    <LinearLayout
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etSearchUser">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="All"
            android:textSize="12sp"
            android:backgroundTint="#5F4B8B"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Student"
            android:textSize="12sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#5F4B8B"
            android:layout_marginEnd="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Teacher"
            android:textSize="12sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#5F4B8B"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUserList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/filter_container"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_user_card"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#5F4B8B"
        app:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Add New User"/>

</androidx.constraintlayout.widget.ConstraintLayout>