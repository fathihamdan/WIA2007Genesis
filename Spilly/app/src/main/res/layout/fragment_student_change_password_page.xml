<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentChangePasswordPage">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/TVBackChangePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:text="Back"
        android:textColor="#3F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVTitleChangePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="175dp"
        android:text="Change Password"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVPassChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="274dp"
        android:layout_marginBottom="10dp"
        android:text="Password"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ETChangePass"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/TVConfirmPassChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="214dp"
        android:layout_marginBottom="10dp"
        android:text="Confirm Password"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ETConfirmPasswordChange"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/ButtonUpdatePass"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="270dp"
        android:text="Update Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ETChangePass"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:inputType="text"
        android:text="Enter new password"
        app:layout_constraintBottom_toTopOf="@+id/TVConfirmPassChange"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/ETConfirmPasswordChange"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="text"
        android:text="Confirm new password"
        app:layout_constraintBottom_toTopOf="@+id/ButtonUpdatePass"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>